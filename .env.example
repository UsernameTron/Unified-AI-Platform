# =============================================================================
# UNIFIED AI PLATFORM - ENVIRONMENT CONFIGURATION TEMPLATE
# =============================================================================
# Copy this file to .env and fill in your API keys and configuration values
# All providers are optional - configure only what you plan to use

# =============================================================================
# PRIMARY AI PROVIDERS (Text Generation)
# =============================================================================

# OpenAI Configuration (GPT-3.5, GPT-4, etc.)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_ORG_ID=your_openai_org_id_here  # Optional
OPENAI_DEFAULT_MODEL=gpt-3.5-turbo

# Anthropic Configuration (Claude models - recommended for code/logic tasks)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_DEFAULT_MODEL=claude-3-sonnet-20240229

# Google Gemini Configuration (recommended for content creation)
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_DEFAULT_MODEL=gemini-pro

# Ollama Configuration (local AI models)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_DEFAULT_MODEL=phi3.5
# Available models: phi3.5, codellama, llama2, mistral

# =============================================================================
# TEXT-TO-SPEECH SERVICES
# =============================================================================

# OpenAI TTS
OPENAI_TTS_MODEL=tts-1
OPENAI_TTS_VOICE=alloy

# ElevenLabs TTS
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here
ELEVENLABS_VOICE_ID=your_preferred_voice_id_here

# Azure Speech Services
AZURE_SPEECH_KEY=your_azure_speech_key_here
AZURE_SPEECH_REGION=your_azure_region_here

# =============================================================================
# VECTOR DATABASES
# =============================================================================

# Pinecone
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=your_pinecone_environment_here
PINECONE_INDEX_NAME=unified-ai-platform

# Weaviate
WEAVIATE_URL=http://localhost:8080
WEAVIATE_API_KEY=your_weaviate_api_key_here  # Optional for local

# Chroma (local vector database)
CHROMA_PERSIST_DIRECTORY=./data/chroma_db

# =============================================================================
# ADDITIONAL AI SERVICES
# =============================================================================

# Cohere
COHERE_API_KEY=your_cohere_api_key_here

# Hugging Face
HUGGINGFACE_API_TOKEN=your_huggingface_token_here

# Stability AI (Stable Diffusion)
STABILITY_API_KEY=your_stability_api_key_here

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=your_secret_key_for_flask_sessions

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=./logs/unified_ai_platform.log

# Rate Limiting
API_RATE_LIMIT=60  # requests per minute per user
MAX_CONCURRENT_REQUESTS=10

# =============================================================================
# PROVIDER PREFERENCES (Optional)
# =============================================================================

# Task-specific provider assignments
PROVIDER_FOR_CODE=anthropic
PROVIDER_FOR_CONTENT=gemini  
PROVIDER_FOR_GENERAL=openai
PROVIDER_FOR_LOCAL=ollama

# Default fallback chain (comma-separated, in order of preference)
FALLBACK_PROVIDERS=openai,anthropic,gemini,ollama

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# API Key Validation
VALIDATE_API_KEYS_ON_STARTUP=true
FAIL_ON_MISSING_KEYS=false  # Set to true for production

# Request Timeout (seconds)
API_REQUEST_TIMEOUT=30

# Retry Configuration
MAX_RETRIES=3
RETRY_DELAY=1  # seconds

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Testing Configuration
RUN_PROVIDER_TESTS_ON_STARTUP=false
TEST_PROVIDER_TIMEOUT=10

# Debug Options
ENABLE_REQUEST_LOGGING=true
ENABLE_RESPONSE_CACHING=false
CACHE_TTL=300  # seconds

# =============================================================================
# NOTES
# =============================================================================
# 1. Never commit your actual .env file to version control
# 2. OpenAI key is required for basic functionality
# 3. Anthropic recommended for code generation and logical reasoning
# 4. Gemini recommended for creative content and writing tasks
# 5. Ollama provides local AI without external API calls
# 6. Configure only the providers you plan to use
# 7. The system will gracefully handle missing provider configurations
